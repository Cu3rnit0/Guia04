<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/black">

    <!-- Título -->
    <EditText
        android:id="@+id/edtTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese Título"
        android:text="Laboratorio de Dispositivos Móviles"
        android:textColor="@color/white"
        android:textColorHint="@color/grayLight"
        android:textSize="20sp"
        android:backgroundTint="@color/white"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0" />

    <!-- Descripción -->
    <EditText
        android:id="@+id/edtDescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese Descripción"
        android:text="Descripción de la tarea"
        android:textColor="@color/white"
        android:textColorHint="@color/grayLight"
        android:textSize="18sp"
        android:backgroundTint="@color/white"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/edtTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Fecha -->
    <EditText
        android:id="@+id/edtFecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese Fecha"
        android:text="Fecha: 12/10/2024"
        android:textColor="@color/white"
        android:textColorHint="@color/grayLight"
        android:textSize="18sp"
        android:backgroundTint="@color/white"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/edtDescripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Hora -->
    <EditText
        android:id="@+id/edtHora"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese Hora"
        android:text="Hora: 14:30"
        android:textColor="@color/white"
        android:textColorHint="@color/grayLight"
        android:textSize="18sp"
        android:backgroundTint="@color/white"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/edtFecha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

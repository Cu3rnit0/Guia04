<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logoapk"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logoapk"
        android:supportsRtl="true"
        android:theme="@style/Theme.Guia01"
        tools:targetApi="31">
        <activity
            android:name=".PalindromeActivity"
            android:exported="false" />
        <activity
            android:name=".PrimeNumberActivity"
            android:exported="false" />
        <activity
            android:name=".RussianMultiplicationActivity"
            android:exported="false" /> <!-- SplashActivity es la actividad inicial de la app -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- LoginActivity se abrirá después del Splash -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" /> <!-- MainActivity se abrirá después del login -->
        <activity
            android:name=".MainActivity"
            android:exported="true" /> <!-- ProcessActivity se abrirá después del MainActivity -->
        <activity
            android:name=".ProcessActivity"
            android:exported="false" /> <!-- AboutActivity se abrirá después del MainActivity -->
        <activity
            android:name=".AboutActivity"
            android:exported="false" />
    </application>

</manifest>